{
  "name": "@agusmgarcia/react-core",
  "version": "2.1.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Agus Garcia",
  "description": "Set of utilities to run, lint, format and build applications and libraries",
  "scripts": {
    "build": "ts-node src/commands/build.ts",
    "check": "ts-node src/commands/check.ts",
    "format": "ts-node src/commands/format.ts",
    "start": "ts-node src/commands/start.ts",
    "prepack": "ts-node src/commands/prepack.ts && cpy README.commands.md README.store.md README.utilities.md ../.. --cwd=.github",
    "postpack": "ts-node src/commands/postpack.ts && del README.commands.md README.store.md README.utilities.md",
    "regenerate": "ts-node src/commands/regenerate.ts --ignore=webpack.config.js"
  },
  "bin": {
    "agusmgarcia-react-core-build": "bin/build.js",
    "agusmgarcia-react-core-check": "bin/check.js",
    "agusmgarcia-react-core-format": "bin/format.js",
    "agusmgarcia-react-core-postpack": "bin/postpack.js",
    "agusmgarcia-react-core-prepack": "bin/prepack.js",
    "agusmgarcia-react-core-start": "bin/start.js",
    "agusmgarcia-react-core-regenerate": "bin/regenerate.js"
  },
  "peerDependencies": {
    "@types/eslint": "^8.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "autoprefixer": "^10.0.0",
    "cpy-cli": "^5.0.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-sort": "^3.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "next": "^14.0.0",
    "postcss": "^8.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "0.6.x",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sass": "^1.0.0",
    "tailwindcss": "^3.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "use-context-selector": "^2.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "devDependencies": {
    "@redux-devtools/extension": "3.3.0",
    "remove-files-webpack-plugin": "1.5.0",
    "ts-node": "10.9.2"
  },
  "engines": {
    "node": ">=20"
  }
}
